<h1><%= @anime.name %></h1>
<img src='<%= @anime.image_url %>'><br>
<a target="_blank" href='<%= @anime.url %>'>More info</a>
<p><%= @anime.synopsis %></p>

<h3>Find a new anime?</h3>
<a href='/animes/search'>Remove</a>

<h2>Please fill out your info!</h2>
<form action='/animes/<%= @anime.slug %>/new' method="POST">
  <label for="user_content">Your Review:</label>
  <textarea id='user_content' name='user_content' rows="5" cols="33" required></textarea><br>

  <label for="user_episode">Current Episode</label>
  <select id="user_eposode" name="user_episode">
    <% episodes = @anime.episodes %>
    <% episode = 0 %>
    <% while episodes > 0 %>
      <% episode += 1 %>
      <option><%= episode %></option>
      <% episodes -= 1 %>
    <% end %>
  </select><br>


  <label for="user_rating">Choose your rating</label>
  <select id="user_rating" name="user_rating">
    <option>1</option>
    <option>2</option>
    <option>3</option>
    <option>4</option>
    <option>5</option>
  </select><br>

  <input type='submit' value='Save Anime'>
</form>