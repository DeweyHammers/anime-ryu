<main class='anime-container text-center'>
  <% if flash.has?(:message) %>
    <div class="alert alert-danger anime-alert mb-2">
      <%= flash[:message] %>
    </div> 
  <% end %>
  
  <div class='anime-form'>
    <form action='/sign-up' method='POST'>
      <img class="mb-4" src="images/dragon_user.png" alt="" width="100" height="100">
      <h1 class='h3 mb-3 fw-normal'>Please Sign Up</h1>
      <div class='form-floating mb-1'>
        <input class='form-control' type='text' name='name' id='name' placeholder='Username'>
        <label for="username">Username</label>
      </div>
      <div class='form-floating mb-1'>
        <input class='form-control' type='email' name='email' id='email' placeholder='Email'>
        <label for="email">Email</label>
      </div>
      <div class='form-floating mb-1'>
        <input class='form-control' type='password' name='password' id='password' placeholder='Password'>
        <label for="password">Password</label>
      </div>
      <div class='form-floating mb-1'>
        <input class='form-control' type='password' name='password_confirmation' id='password_confirmation' placeholder='Password Confirmation'>
        <label for="password">Password Confirmation</label>
      </div>
      <input class='w-100 btn btn-lg btn-outline-secondary' type="submit" value='Sign Up'>
    </form>
  </div>
</main>